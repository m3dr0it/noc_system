    <script>
      $('.table tbody').on('click','#editModemButton',function(){
        var currow = $(this).closest('tr');
        var col1 = currow.find('td:eq(0)').text();
        var col2 = currow.find('td:eq(1)').text();
        document.getElementById('editModemId').value = col1;
        document.getElementById('editModemType').value = col2;
        document.getElementById('deleteModemApi').href = "/modem/delete/"+col1;
      });
